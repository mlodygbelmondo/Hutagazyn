@model IEnumerable<Hutagazyn.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h1>Products</h1>
    <a class="text-white register-button" asp-action="Create" style="text-decoration:none; padding: 0.55rem 1.25rem; background-color: #6610f2; border-radius: 2rem; font-size: 1.1rem; font-weight: 600;">
        Create new product
    </a>
</div>


<p>
    
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price) (for 1000g)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSellable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mass)g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)$
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSellable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
